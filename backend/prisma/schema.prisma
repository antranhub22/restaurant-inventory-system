generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int      @id @default(autoincrement())
  username          String   @unique
  email             String   @unique
  passwordHash      String
  fullName          String
  phone             String?
  role              Role
  department        String?
  permissions       Json?
  isActive          Boolean  @default(true)
  emailVerified     Boolean  @default(false)
  lastLogin         DateTime?
  failedLoginAttempts Int    @default(0)
  lockedUntil       DateTime?
  avatarUrl         String?
  language          Language @default(vi)
  timezone          String   @default("Asia/Ho_Chi_Minh")
  createdBy         Int?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  // Relations
  transactions      Transaction[]
  approvedDepartmentReconciliations DepartmentReconciliation[] @relation("ApprovedBy")
  processedImports    Import[]  @relation("ProcessedBy")
  approvedImports     Import[]  @relation("ApprovedBy")
  rejectedImports     Import[]  @relation("RejectedBy")
  processedExports    Export[] @relation("ProcessedExports")
  approvedExports     Export[] @relation("ApprovedExports")
  rejectedExports     Export[] @relation("RejectedExports")
  processedReturns  Return[] @relation("ProcessedReturns")
  approvedReturns   Return[] @relation("ApprovedReturns")
  rejectedReturns   Return[] @relation("RejectedReturns")
  processedWastes Waste[] @relation("ProcessedWastes")
  approvedWastes  Waste[] @relation("ApprovedWastes")
  rejectedWastes  Waste[] @relation("RejectedWastes")
  processedReconciliations Reconciliation[] @relation("ProcessedReconciliations")
  approvedReconciliations  Reconciliation[] @relation("ApprovedReconciliations")
  rejectedReconciliations  Reconciliation[] @relation("RejectedReconciliations")
}

enum Role {
  owner
  manager
  supervisor
  staff
}

enum Language {
  vi
  en
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  colorCode   String?  // Hex color
  sortOrder   Int      @default(0)
  isActive    Boolean  @default(true)
  items       Item[]
}

model Supplier {
  id          Int      @id @default(autoincrement())
  name        String
  contactPerson String?
  phone       String?
  email       String?
  address     String?
  paymentTerms String?
  isActive    Boolean  @default(true)
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  items       Item[]   @relation("PrimarySupplier")
  secondaryItems Item[] @relation("SecondarySupplier")
  inventoryBatches InventoryBatch[]
  imports       Import[]
}

model Item {
  id          Int      @id @default(autoincrement())
  name        String
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  Int
  unit        String
  unitCost    Float?
  minStock    Float    @default(0)
  maxStock    Float?
  expiryDays  Int?
  aliases     String[]
  barcode     String?
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  inventory   Inventory?
  transactions Transaction[]
  inventoryBatches InventoryBatch[]
  primarySupplier   Supplier? @relation("PrimarySupplier", fields: [primarySupplierId], references: [id])
  primarySupplierId Int?
  secondarySupplier Supplier? @relation("SecondarySupplier", fields: [secondarySupplierId], references: [id])
  secondarySupplierId Int?
  departmentReconciliations DepartmentReconciliation[]
  importItems ImportItem[]
  exportItems ExportItem[]
  returnItems ReturnItem[]
  wasteItems WasteItem[]
  reconciliationItems ReconciliationItem[]
}

model Inventory {
  itemId        Int    @id
  item          Item   @relation(fields: [itemId], references: [id])
  currentStock  Float  @default(0)
  reservedStock Float  @default(0)
  lastUpdated   DateTime @default(now())
  lastChecked   DateTime?
  nextExpiry    DateTime?
}

model InventoryBatch {
  id              Int      @id @default(autoincrement())
  item            Item     @relation(fields: [itemId], references: [id])
  itemId          Int
  batchNumber     String?
  initialQuantity Float
  currentQuantity Float
  reservedQuantity Float   @default(0)
  unitCost        Float
  receivedDate    DateTime
  expiryDate      DateTime?
  manufacturedDate DateTime?
  supplier        Supplier? @relation(fields: [supplierId], references: [id])
  supplierId      Int?
  status          BatchStatus @default(active)
  location        String?
  createdAt       DateTime @default(now())
  transactions    Transaction[]
}

enum BatchStatus {
  active
  expired
  consumed
  damaged
  returned
}

model Transaction {
  id            Int      @id @default(autoincrement())
  type          TransactionType
  item          Item     @relation(fields: [itemId], references: [id])
  itemId        Int
  batch         InventoryBatch? @relation(fields: [batchId], references: [id])
  batchId       Int?
  quantity      Float
  unitCost      Float?
  department    String?
  processedBy   User     @relation(fields: [processedById], references: [id])
  processedById Int
  status        TransactionStatus @default(approved)
  notes         String?
  createdAt     DateTime @default(now())
  approvedAt    DateTime?
}

enum TransactionType {
  IN
  OUT
  RETURN
  ADJUSTMENT
  TRANSFER
  WASTE
  STAFF_USE
  SAMPLING
}

enum TransactionStatus {
  pending
  approved
  rejected
  cancelled
}

model DepartmentReconciliation {
  id            Int      @id @default(autoincrement())
  department    String
  item          Item     @relation(fields: [itemId], references: [id])
  itemId        Int
  shiftDate     DateTime
  shiftType     ShiftType
  withdrawn     Float    @default(0)
  sold          Float    @default(0)
  returned      Float    @default(0)
  wasted        Float    @default(0)
  staffConsumed Float    @default(0)
  sampled       Float    @default(0)
  discrepancy   Float?
  discrepancyRate Float?
  discrepancyValue Float?
  status        ReconciliationStatus @default(pending)
  requiresApproval Boolean @default(false)
  approvedBy    User?    @relation("ApprovedBy", fields: [approvedById], references: [id])
  approvedById  Int?
  approvedAt    DateTime?
  resolutionNotes String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([department, itemId, shiftDate, shiftType])
}

enum ShiftType {
  morning
  afternoon
  evening
  full_day
}

enum ReconciliationStatus {
  draft
  pending
  approved
  rejected
  cancelled
}

model Reconciliation {
  id              Int           @id @default(autoincrement())
  date            DateTime
  department      Department    @relation(fields: [departmentId], references: [id])
  departmentId    Int
  shiftType       ShiftType
  processedBy     User         @relation("ProcessedReconciliations", fields: [processedById], references: [id])
  processedById   Int
  notes           String?
  status          ReconciliationStatus  @default(pending)
  approvedBy      User?        @relation("ApprovedReconciliations", fields: [approvedById], references: [id])
  approvedById    Int?
  approvedAt      DateTime?
  rejectedBy      User?        @relation("RejectedReconciliations", fields: [rejectedById], references: [id])
  rejectedById    Int?
  rejectedAt      DateTime?
  rejectionReason String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  items           ReconciliationItem[]

  @@unique([date, departmentId, shiftType])
}

model ReconciliationItem {
  id               Int           @id @default(autoincrement())
  reconciliation   Reconciliation @relation(fields: [reconciliationId], references: [id], onDelete: Cascade)
  reconciliationId Int
  item            Item          @relation(fields: [itemId], references: [id])
  itemId          Int
  openingStock    Float
  received        Float         @default(0)
  withdrawn       Float         @default(0)
  sold            Float         @default(0)
  returned        Float         @default(0)
  wasted          Float         @default(0)
  staffConsumed   Float         @default(0)
  sampled         Float         @default(0)
  systemStock     Float
  actualStock     Float
  discrepancy     Float
  discrepancyRate Float
  discrepancyValue Float
  notes           String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

// OCR Learning Tables
model OcrCorrection {
  id            Int      @id @default(autoincrement())
  originalText  String
  correctedText String
  type          String   // 'supplier' | 'item' | 'unit' | 'date' | 'total'
  confidence    Float
  createdAt     DateTime @default(now())

  @@index([type])
  @@index([originalText])
}

model OcrLearning {
  id             Int      @id @default(autoincrement())
  originalText   String
  correctedText  String
  type           String   // 'supplier' | 'item' | 'unit' | 'date' | 'total'
  correctionCount Int     @default(1)
  confidence     Float
  lastUpdated    DateTime @default(now())

  @@index([type])
  @@index([originalText])
  @@index([correctionCount])
}

model Import {
  id              Int           @id @default(autoincrement())
  date            DateTime
  supplier        Supplier      @relation(fields: [supplierId], references: [id])
  supplierId      Int
  invoiceNumber   String        @unique
  processedBy     User          @relation("ProcessedBy", fields: [processedById], references: [id])
  processedById   Int
  totalAmount     Float
  notes           String?
  attachments     String[]
  status          String        @default("pending")
  approvedBy      User?         @relation("ApprovedBy", fields: [approvedById], references: [id])
  approvedById    Int?
  approvedAt      DateTime?
  rejectedBy      User?         @relation("RejectedBy", fields: [rejectedById], references: [id])
  rejectedById    Int?
  rejectedAt      DateTime?
  rejectionReason String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  items           ImportItem[]
}

model ImportItem {
  id          Int       @id @default(autoincrement())
  import      Import    @relation(fields: [importId], references: [id], onDelete: Cascade)
  importId    Int
  item        Item      @relation(fields: [itemId], references: [id])
  itemId      Int
  quantity    Float
  unitPrice   Float
  expiryDate  DateTime?
  batchNumber String?
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum ExportPurpose {
  production
  sale
  damage
  return
  transfer
}

enum ExportStatus {
  draft
  pending
  approved
  rejected
  cancelled
}

model Export {
  id              Int           @id @default(autoincrement())
  date            DateTime
  purpose         ExportPurpose
  department      Department    @relation(fields: [departmentId], references: [id])
  departmentId    Int
  processedBy     User         @relation("ProcessedExports", fields: [processedById], references: [id])
  processedById   Int
  notes           String?
  attachments     String[]
  status          ExportStatus  @default(pending)
  approvedBy      User?        @relation("ApprovedExports", fields: [approvedById], references: [id])
  approvedById    Int?
  approvedAt      DateTime?
  rejectedBy      User?        @relation("RejectedExports", fields: [rejectedById], references: [id])
  rejectedById    Int?
  rejectedAt      DateTime?
  rejectionReason String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  items           ExportItem[]
  returnItems     ReturnItem[]
}

model ExportItem {
  id           Int      @id @default(autoincrement())
  export       Export   @relation(fields: [exportId], references: [id], onDelete: Cascade)
  exportId     Int
  item         Item     @relation(fields: [itemId], references: [id])
  itemId       Int
  quantity     Float
  currentStock Float
  notes        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum ReturnReason {
  excess
  defective
  menu_change
  expired
  other
}

enum ReturnStatus {
  draft
  pending
  approved
  rejected
  cancelled
}

enum ItemCondition {
  good
  fair
  poor
  damaged
  expired
}

model Return {
  id              Int           @id @default(autoincrement())
  date            DateTime
  department      Department    @relation(fields: [departmentId], references: [id])
  departmentId    Int
  reason          ReturnReason
  processedBy     User         @relation("ProcessedReturns", fields: [processedById], references: [id])
  processedById   Int
  notes           String?
  attachments     String[]
  status          ReturnStatus  @default(pending)
  approvedBy      User?        @relation("ApprovedReturns", fields: [approvedById], references: [id])
  approvedById    Int?
  approvedAt      DateTime?
  rejectedBy      User?        @relation("RejectedReturns", fields: [rejectedById], references: [id])
  rejectedById    Int?
  rejectedAt      DateTime?
  rejectionReason String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  items           ReturnItem[]
}

model ReturnItem {
  id              Int           @id @default(autoincrement())
  return          Return        @relation(fields: [returnId], references: [id], onDelete: Cascade)
  returnId        Int
  item            Item          @relation(fields: [itemId], references: [id])
  itemId          Int
  quantity        Float
  condition       ItemCondition
  originalExport  Export?       @relation(fields: [originalExportId], references: [id])
  originalExportId Int?
  notes           String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model Department {
  id          Int       @id @default(autoincrement())
  name        String
  code        String    @unique
  description String?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  exports     Export[]
  returns     Return[]
  wastes      Waste[]
  reconciliations Reconciliation[]
}

enum WasteType {
  damage
  expiry
  breakage
  natural
  cooking
  quality
  other
}

enum WasteStatus {
  draft
  pending
  approved
  rejected
  cancelled
}

model Waste {
  id              Int           @id @default(autoincrement())
  date            DateTime
  department      Department    @relation(fields: [departmentId], references: [id])
  departmentId    Int
  wasteType       WasteType
  description     String
  processedBy     User         @relation("ProcessedWastes", fields: [processedById], references: [id])
  processedById   Int
  witnesses       String[]
  evidencePhotos  String[]
  notes           String?
  status          WasteStatus  @default(pending)
  approvedBy      User?        @relation("ApprovedWastes", fields: [approvedById], references: [id])
  approvedById    Int?
  approvedAt      DateTime?
  rejectedBy      User?        @relation("RejectedWastes", fields: [rejectedById], references: [id])
  rejectedById    Int?
  rejectedAt      DateTime?
  rejectionReason String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  items           WasteItem[]
}

model WasteItem {
  id             Int      @id @default(autoincrement())
  waste          Waste    @relation(fields: [wasteId], references: [id], onDelete: Cascade)
  wasteId        Int
  item           Item     @relation(fields: [itemId], references: [id])
  itemId         Int
  quantity       Float
  estimatedValue Float
  reason         String
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
