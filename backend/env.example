# Database - PostgreSQL Configuration
DATABASE_URL="postgresql://user:password@host:5432/restaurant_inventory?sslmode=require"
# For Render.com PostgreSQL add-on: Use the External Database URL from Render dashboard
# Format: postgresql://user:password@host:5432/database?sslmode=require

# JWT
JWT_SECRET="your-jwt-secret"
JWT_EXPIRES_IN="1d"

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# AI Services - OpenAI Primary, DeepSeek Fallback
OPENAI_API_KEY="your-openai-api-key"    # Primary AI provider
DEEPSEEK_API_KEY="your-deepseek-api-key" # Fallback AI provider
# Note: System automatically uses OpenAI as primary, DeepSeek as fallback
# You can set either or both API keys

# Logging
LOG_LEVEL="info"

# Server
PORT=3000
NODE_ENV="development"

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Google Cloud Vision API
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_CLIENT_EMAIL=your-service-account-email
GOOGLE_CLOUD_PRIVATE_KEY="your-private-key"

# OCR Configuration
OCR_MIN_CONFIDENCE_SCORE=0.8
OCR_ENABLE_LEARNING=true
FORCE_VISION_FAIL=false               # Set to true to test Tesseract improvements
OCR_ENHANCEMENT_LEVEL=auto            # none, basic, aggressive, maximum, auto
AI_OCR_CORRECTION=true                # Enable AI-powered OCR error correction 