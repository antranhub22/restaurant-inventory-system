# Database
DATABASE_URL="postgresql://user:password@localhost:5432/restaurant_inventory"

# JWT
JWT_SECRET="your-jwt-secret"
JWT_EXPIRES_IN="1d"

# Redis
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# AI Services
OPENAI_API_KEY="your-openai-api-key"
DEEPSEEK_API_KEY="your-deepseek-api-key"
AI_SERVICE="openai" # or "deepseek"

# Logging
LOG_LEVEL="info"

# Server
PORT=3000
NODE_ENV="production"

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Google Cloud Vision API - Tối ưu hóa cho OCR
GOOGLE_CLOUD_PROJECT_ID="your-project-id"
GOOGLE_CLOUD_CLIENT_EMAIL="your-service-account-email"
GOOGLE_CLOUD_PRIVATE_KEY="your-private-key"

# OCR Configuration - Tối ưu hóa cho tiếng Việt
OCR_MIN_CONFIDENCE_SCORE=0.7
OCR_ENABLE_LEARNING=true
OCR_VISION_TIMEOUT=30000
OCR_TESSERACT_TIMEOUT=60000
OCR_ENABLE_IMAGE_OPTIMIZATION=true
OCR_ENABLE_VIETNAMESE_OPTIMIZATION=true

# Image Processing Configuration
IMAGE_MAX_WIDTH=2048
IMAGE_MAX_HEIGHT=2048
IMAGE_QUALITY=90
IMAGE_MIN_DPI=300

# Vietnamese OCR Optimization
VIETNAMESE_OCR_ENABLE_NORMALIZATION=true
VIETNAMESE_OCR_ENABLE_PATTERN_DETECTION=true
VIETNAMESE_OCR_CONFIDENCE_BOOST=0.1

# Performance Optimization
OCR_BATCH_SIZE=5
OCR_CACHE_ENABLED=true
OCR_CACHE_TTL=3600
OCR_RATE_LIMIT_PER_MINUTE=30

# Error Handling
OCR_RETRY_ATTEMPTS=3
OCR_RETRY_DELAY=1000
OCR_FALLBACK_ENABLED=true

# Monitoring
OCR_METRICS_ENABLED=true
OCR_LOGGING_LEVEL="info"
OCR_DEBUG_MODE=false