datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Thêm vào file schema.prisma
model FormTemplate {
  id          String   @id @default(cuid())
  name        String
  type        String   // IMPORT, EXPORT, RETURN, ADJUSTMENT
  structure   Json     // Cấu trúc form dạng JSON
  isDefault   Boolean  @default(false)
  isActive    Boolean  @default(true)
  version     String?
  description String?
  createdBy   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  history     FormTemplateHistory[]

  @@map("form_templates")
}

model FormTemplateHistory {
  id            String      @id @default(cuid())
  formTemplate  FormTemplate @relation(fields: [formTemplateId], references: [id])
  formTemplateId String
  structure     Json
  changedBy     String?
  changeNote    String?
  createdAt     DateTime    @default(now())

  @@map("form_template_history")
}

model FormConfig {
  id        String   @id @default(cuid())
  type      String   @unique
  config    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("form_configs")
}

model CustomField {
  id          String   @id @default(cuid())
  name        String
  label       String
  type        String
  options     Json?
  validation  Json?
  isRequired  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("custom_fields")
} 